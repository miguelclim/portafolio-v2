---
import Link from "./Link.astro";
import presentation from "../data/presentacion";
---

<ul role="list" class="flex flex-row gap-2">
    {
        presentation.socials.map((social, index) => (
            <>
                <li>
                    <Link href={social.link} label={social.label} icon={social.icon}/>
                </li>
            </>
        ))
    }
</ul>
